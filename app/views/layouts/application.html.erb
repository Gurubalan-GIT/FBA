<!DOCTYPE html>
<html>
  <head>
    <title>FBA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

   <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <a class="navbar-brand" href="/">FBA</a>
      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto"> 


          <% if current_user && current_user.admin? %>
              <li class="nav-item">
                <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Admin</a>
              </li>
          <% end %>

          <% if current_user %>
          <li class="nav-item">
            <a class="nav-link">Signed in as <%= current_user.email %> </a>
          </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Guest</a>
            </li>
          <% end %>

         
        
        </ul>

        <ul class="navbar-nav ml-auto"> 

            <% if current_user && current_user.admin? %>

               <li class="nav-item">
                <%= link_to 'Trips', trips_path , class: 'nav-link' %> 
              </li>

           <% end %>

          <% if current_user %>

          <li class="nav-item dropdown mr-4">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Settings
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to 'Edit Account', edit_user_registration_path , class: 'dropdown-item' %> 
              <%= link_to 'Sign out', destroy_user_session_path, data: { confirm: 'Sure? You will be signed out.' } ,method: :delete , class: 'dropdown-item' %> 
            </div>
          </li>

          <% end %>
        
        </ul>

      </div>
    </nav>


     <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

  <body>
    <div class="container">
        <%= yield %>
    </div>


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" crossorigin="anonymous"></script>
  </body>
</html>
